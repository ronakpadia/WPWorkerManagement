<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectDetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#DDDDDD"
                    app:contentPadding="20px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/twProjectName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Project Name"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/twProjectId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="safdOIEH8q398fdv" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/twProjectCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Company"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/twProjectLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Location"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/twProjectDuration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Duration" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tw"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Wages"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/twWages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="15px"
                                android:paddingLeft="15px"
                                android:text="TextView"
                                android:textColor="#4CAF50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tww"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Conveyance"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/twConveyance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="15px"
                                android:paddingLeft="15px"
                                android:text="TextView"
                                android:textColor="#4CAF50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tw2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cash Expenses"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/twCashExpenses"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="15px"
                                android:paddingLeft="15px"
                                android:text="TextView"
                                android:textColor="#4CAF50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tw3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cheque Payments"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/twChequePayments"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="15px"
                                android:paddingLeft="15px"
                                android:text="TextView"
                                android:textColor="#4CAF50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tw4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Expenses"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/twTotalExpenses"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="15px"
                                android:paddingLeft="15px"
                                android:text="TextView"
                                android:textColor="#4CAF50" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:background="@color/grey"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvWorkers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Workers"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tvCash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:padding="5dp"
                        android:text="Cash"

                        android:background="@color/grey"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="#6a737c"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tvCheque"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:padding="5dp"
                        android:background="@color/grey"
                        android:text="Cheque"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="#6a737c"
                        android:textSize="20dp"/>

                </LinearLayout>






                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/LL"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TableLayout
                                    android:id="@+id/projectTable"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                </TableLayout>

                            </LinearLayout>
                        </ScrollView>
                    </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <SearchView
                        android:id="@+id/pWorkerSearchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </SearchView>


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/buttonsLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRemove"
                            style="@style/Widget.MaterialComponents.Button.Icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/purple_500"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:icon="@mipmap/remove_user_foreground"
                            app:iconPadding="0dp"
                            app:iconSize="24dp"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="Remove Worker"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAdd"
                            style="@style/Widget.MaterialComponents.Button.Icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/purple_500"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:icon="@mipmap/add_user_foreground"
                            app:iconPadding="0dp"
                            app:iconSize="24dp"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="Add Worker"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConveyance"
                            style="@style/Widget.MaterialComponents.Button.Icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/purple_500"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:icon="@mipmap/conveyance_foreground"
                            app:iconPadding="0dp"
                            app:iconSize="24dp"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="Add Conveyance"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMarkAttendance"
                            style="@style/Widget.MaterialComponents.Button.Icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/purple_500"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:icon="@mipmap/attendance_foreground"
                            app:iconPadding="0dp"
                            app:iconSize="24dp"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="Attendance"
                            android:textColor="@color/black"
                            android:textSize="12dp" />


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tableTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:id="@+id/dateLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dateTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date:"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/ETdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Select Date"
                        android:inputType="date" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutT"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_above="@+id/LL"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TableLayout
                                    android:id="@+id/projectTable2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp">

                                    <TableRow
                                        android:id="@+id/TableHeaderTags2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <TextView
                                            android:id="@+id/nameTag2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:text="Name"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold"></TextView>

                                        <TextView
                                            android:id="@+id/cardTag2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:text="Card No."
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold"></TextView>

                                        <TextView
                                            android:id="@+id/rateTag2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:text="Base Rate"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold"></TextView>

                                        <TextView
                                            android:id="@+id/workTpyeTag2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:text="Work Type"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold"></TextView>

                                    </TableRow>

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </TableLayout>

                            </LinearLayout>
                        </ScrollView>
                    </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="25dp">

                    <SearchView
                        android:id="@+id/workerRemoveSearchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                    </SearchView>

                    <SearchView
                        android:id="@+id/workerAddSearchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </SearchView>

                    <SearchView
                        android:id="@+id/workerConveyanceSearchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                    </SearchView>

                    <SearchView
                        android:id="@+id/workerAttendanceSearchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                    </SearchView>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:tint="@color/purple_700"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/purple_500"
        app:srcCompat="@mipmap/edit_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:tint="@color/purple_700"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/purple_500"
        app:srcCompat="@mipmap/done_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#F44336"
        android:clickable="true"
        app:backgroundTint="#D50000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#B71C1C"
        app:srcCompat="@mipmap/delete_foreground" />


</androidx.constraintlayout.widget.ConstraintLayout>